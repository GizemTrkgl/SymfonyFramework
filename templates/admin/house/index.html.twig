{% extends 'adminbase.html.twig' %}
{% block title %}House List{% endblock %}

{% block body %}
    <SCRIPT language="JavaScript" type="text/javascript">
        function openWin(windowURL,windowName,windowFeatures) { window.open( windowURL,windowName,windowFeatures) ;}
    </SCRIPT>
<section id="main-content">
    <section class="wrapper site-min-height">
        <div class="row mt">
            <div class="col-lg-12">
                <div class="col-md-2">
                <a href="{{ path('admin_house_new') }}" class="btn btn-block btn-theme">Create new house</a>
                </div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>


                <th>Image</th>
                <th>Price</th>
                <th>Area</th>
                <th>Rooms</th>
                <th>Address</th>
                <th>Phone</th>

                <th>Email</th>

                <th>Country</th>
                <th>I.Gallery</th>

                <th>Status</th>


            </tr>
        </thead>
        <tbody>
        {% for house in houses %}
            <tr>
                <td>{{ house.id }}</td>
                <td>{{ house.title }}</td>

                <td><img src="{{ asset('uploads/images/' ~ house.image) }}" height="40"> </td>
                <td>{{ house.price }}</td>
                <td>{{ house.area }}</td>
                <td>{{ house.rooms }}</td>
                <td>{{ house.address }}</td>
                <td>{{ house.phone }}</td>

                <td>{{ house.email }}</td>

                <td>{{ house.country }}</td>
                <td>
                    <a href="javascript:openWin('{{ path('admin_image_new', {'id' : house.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=50,left=100,menuBar=no,scrollBars=yes,resizable=no,width=900,height=600');">
                        <img src="{{ asset('assets/admin/img') }}/gallery.png" height="40">
                    </a>
                </td>

                <td>{{ house.status }}</td>




                <td>
                        <a href="{{ path('admin_house_show', {'id': house.id}) }}"class="btn btn-theme">show</a>
                </td>
                <td>
                        <a href="{{ path('admin_house_edit', {'id': house.id}) }}"class="btn btn-theme">edit</a>
                </td>
                <td>
                {{ include('admin/house/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="19">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



            </div>
        </div>
    </section>
    <!-- /wrapper -->
</section>
<!-- /MAIN CONTENT -->

{% endblock %}

